        .wallet-button .icon {
            margin-right: 8px;
            font-size: 16px;
        }
        
        /* é’±åŒ…é€‰æ‹©ä¸‹æ‹‰èœå• */
        .wallet-dropdown {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border-radius: 12px;
            margin-top: 8px;
